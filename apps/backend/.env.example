# Backend Environment Variables Template
# Copy this file to .env and configure for your environment

# ============================================
# CLERK AUTHENTICATION
# ============================================
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string
MONGODB_URI=mongodb://username:password@YOUR_MONGODB_HOST:27017/?tls=false
DATABASE_NAME=dindin

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=YOUR_REDIS_HOST
REDIS_PORT=6379

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# ============================================
# SECURITY
# ============================================
# Comma-separated list of allowed origins for CORS
# Include all client origins: simulator, physical device, web app
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:3000,http://YOUR_HOST_IP:8081,http://YOUR_HOST_IP:3000

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_EXPIRY_MINUTES=60
MAX_FREE_SESSIONS=1

# ============================================
# COMPLIANCE
# ============================================
DATA_RETENTION_DAYS=90
ENABLE_AUDIT_LOG=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Directory for log files (production only)
LOG_DIR=./logs
# Service name for logging
SERVICE_NAME=dindin-backend

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=your_sentry_dsn_if_using_sentry