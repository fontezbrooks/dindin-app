{
  "name": "backend",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --target=bun --outdir=dist --minify",
    "start": "NODE_ENV=production bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "check-types": "tsc --noEmit",
    "seed": "bun run src/scripts/seed-recipes.ts",
    "format": "biome format --write --reporter=rdjson",
    "lint": "biome lint --write --reporter=rdjson",
    "imports": "biome check --write --reporter=rdjson"
  },
  "dependencies": {
    "@clerk/backend": "^2.19.0",
    "@hono/node-ws": "^1.2.0",
    "@opentelemetry/exporter-prometheus": "^0.207.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "cron": "^4.3.3",
    "dotenv": "^17.2.3",
    "hono": "^4.10.3",
    "inversify": "^7.10.4",
    "ioredis": "^5.8.2",
    "mongodb": "^6.20.0",
    "rate-limiter-flexible": "^8.1.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.2"
  }
}
